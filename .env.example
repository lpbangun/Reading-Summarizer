# OpenRouter API Configuration
OPENROUTER_API_KEY=sk-or-v1-your-key-here
MODEL_NAME=x-ai/grok-4.1-fast

# API Parameters
TEMPERATURE=0.7
MAX_TOKENS=5000
REQUEST_TIMEOUT=300

# Processing Limits
MAX_PAGES=500
EXTRACTION_TIMEOUT=120

# Historical Context
ENABLE_HISTORY=true
MAX_PREVIOUS_SUMMARIES=10

# Master Files
# Use ~ for home directory or provide absolute path
GLOBAL_MASTER_PATH=~/.academic-summaries/_global_master.md
AUTO_UPDATE_MASTERS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
